<mapper namespace="com.bytefinger.toutuo.biz.user.mapper.UserMapper">

    <resultMap type="com.bytefinger.toutuo.api.biz.user.domain.SysUser" id="SysUserResult">
        <id property="userId" column="user_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="email" column="email"/>
        <result property="phonenumber" column="phonenumber"/>
        <result property="sex" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="getUserPrincipalByDeptId" resultType="com.bytefinger.common.core.web.domain.vo.UserVO">
<!--        select DISTINCT  user.* from sys_dept dept-->
<!--                          LEFT JOIN  sys_user_dept_post post on post.dept_id=dept.dept_id-->
<!--                          LEFT JOIN sys_user as `user` on post.user_id = user.user_id-->
<!--        WHERE  dept.dept_id = user.dept_id-->
<!--        <if test="deptName != null and deptName !=''">-->
<!--            and dept.dept_name = #{deptName}-->
<!--        </if>-->
<!--        <if test="deptId != null and deptId !=''">-->
<!--            and dept.dept_id = #{deptId}-->
<!--        </if>-->
        select DISTINCT  user.* from sys_dept dept
        LEFT JOIN  sys_user_dept_post post on post.dept_id=dept.dept_id
        LEFT JOIN sys_user as `user` on post.user_id = user.user_id
        WHERE  dept.dept_id = user.dept_id

        <if test="deptId != null and deptId !=''">
            and dept.dept_id in (
            select DISTINCT  dept.dept_id from sys_dept dept
            WHERE
            dept.parent_id = #{deptId}
            and dept.dept_name = "运营管理部")
        </if>

        <if test="deptName != null and deptName !=''">
            and dept.dept_id in (
            select DISTINCT  dept.dept_id from sys_dept dept
            WHERE
            dept.dept_name = "运营管理部" and dept.parent_id in (select DISTINCT  dept.dept_id from sys_dept dept
            WHERE
            dept.dept_name = #{deptName}))
        </if>


    </select>


    <select id="getUserPrincipalId" resultType="com.bytefinger.common.core.web.domain.vo.UserVO">
        <!--        select DISTINCT  user.* from sys_dept dept-->
        <!--                          LEFT JOIN  sys_user_dept_post post on post.dept_id=dept.dept_id-->
        <!--                          LEFT JOIN sys_user as `user` on post.user_id = user.user_id-->
        <!--        WHERE  dept.dept_id = user.dept_id-->
        <!--        <if test="deptName != null and deptName !=''">-->
        <!--            and dept.dept_name = #{deptName}-->
        <!--        </if>-->
        <!--        <if test="deptId != null and deptId !=''">-->
        <!--            and dept.dept_id = #{deptId}-->
        <!--        </if>-->
        select DISTINCT  user.* from sys_dept dept
        LEFT JOIN  sys_user_dept_post post on post.dept_id=dept.dept_id
        LEFT JOIN sys_user as `user` on post.user_id = user.user_id
        WHERE  dept.dept_id = user.dept_id
        and user.user_id = #{userId}
            and dept.dept_id in (
            select DISTINCT  dept.dept_id from sys_dept dept
            WHERE
            dept.dept_name = "运营管理部" and dept.parent_id in (select DISTINCT  dept.dept_id from sys_dept dept
            WHERE
            dept.dept_name = "宝石花总部"))
    </select>


</mapper> 